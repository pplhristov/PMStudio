                    <li class="list-group-item">Properties under management: @Model.TotalProperties</li>
                    <li class="list-group-item">Managing @Model.TotalTenants tenants.</li>
                </ul>}
    @if (!this.User.Identity.IsAuthenticated)
    {

<p class="mt-0">We are here to help you manage your properies!</p>
                <p></p>
                                <p>Providng simple solutions for the complex world of property management:</p>
                                                <p>- managing properties</p>
                                                                <p>- managing tenants</p>
                                                                                <p>- managing vendors</p>
                                                                                                <p>- managing maintenance services</p>
