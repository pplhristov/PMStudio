@model PMStudio.Web.ViewModels.Vendors.VendorsListViewModel
@{
    this.ViewData["Title"] = "Vendors";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="col-md-12 text-center">
        <a class="btn btn-primary" asp-area="" asp-controller="Vendors" asp-action="Create">Add Vendor</a>
</div>
<hr />
    <div class="flex-column">
        @foreach (var vendor in Model.Vendors)
        {
            <div>
                <div class="flex-row">
                    <div class="media-body">
                        <h5 class="mt-0"> @vendor.Name</h5>
                        <div>@vendor.Trade</div>
                        <div>@vendor.Phone</div>
                        <div>@vendor.Email</div>
                    </div>
                    <div class="single-meta">
                        <form method="post" asp-controller="Vendors" asp-action="Delete" id="deleteForm" asp-route-id="@vendor.Id">
                        </form>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                    </div>
                </div>
                <hr />

                <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <p>Do you want to delete "@vendor.Name"?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr />
    <partial name="_PagingPartial" model="@Model" />
