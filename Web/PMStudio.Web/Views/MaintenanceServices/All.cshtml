@model PMStudio.Web.ViewModels.MaintenanceServicesViewModels.MaintenanceServicesListViewModel
@{
    this.ViewData["Title"] = "All MaintenanceServices";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="col-md-12 text-center">
    <a class="btn btn-primary" asp-area="" asp-controller="MaintenanceServices" asp-action="Create">Add New Maintenance Service</a>
</div>
<hr />
<div class="flex-column">
    @foreach (var maintenanceService in Model.MaintenanceServices)
    {
        <div class="media-body">
            <h5 class="mt-0"> @maintenanceService.Name</h5>
            <div>Scheduled date: @maintenanceService.ServiceDate</div>
            <div>Property: @maintenanceService.Property.Name</div>
            <div>Vendor: @maintenanceService.Vendor.Name</div>
        </div>
        <div class="single-meta">
            <form method="post" asp-action="Delete" id="deleteForm" asp-route-id="@maintenanceService.Id">
            </form>
            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
        </div>
        <hr/>

        <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>Do you want to delete "@maintenanceService.Name"?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
  }
 </div>
