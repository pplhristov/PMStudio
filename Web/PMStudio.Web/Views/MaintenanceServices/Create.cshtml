@model PMStudio.Web.ViewModels.MaintenanceServicesViewModels.CreateMaintenanceServiceViewModel
@{ this.ViewData["Title"] = "Add new maintenance service";
                var propertyItems = this.Model.PropertiesItems.Select(x => new SelectListItem(x.Value, x.Key));
                var vendorItems = this.Model.VendorsItems.Select(x => new SelectListItem(x.Value, x.Key)); 
 }
<h1>Add new maintenance service</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceDate"></label>
        <input asp-for="ServiceDate" class="form-control" />
        <span asp-validation-for="ServiceDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropertyId"></label>
        @*<vc:CategoriesDropDown name=""></vc:CategoriesDropDown>*@
        <select asp-for=" PropertyId" class="form-control" asp-items="propertyItems"> </select>
            <span asp-validation-for="PropertyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VendorId"></label>
        @*<vc:CategoriesDropDown name="CategoryId"></vc:CategoriesDropDown>*@
        <select asp-for="VendorId" class="form-control" asp-items="vendorItems"></select>
        <span asp-validation-for="VendorId" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>