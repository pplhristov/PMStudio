@model PMStudio.Web.ViewModels.TenantsViewModels.TenantsListViewModel
@{
    this.ViewData["Title"] = "All Tenants";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="col-md-12 text-center">
    <a class="btn btn-primary" asp-area="" asp-controller="Tenants" asp-action="Create">Add Tenant</a>
</div>
<hr />
<div class="row">

    @foreach (var tenant in Model.Tenants)
    {
        <div class="media-body">
            <h5 class="mt-0"><a asp-action="ById" asp-route-id="@tenant.Id">Tenant Name: @tenant.Name</a></h5>
            <div>
               Lease Period: @tenant.LeasePeriod Months
                </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />