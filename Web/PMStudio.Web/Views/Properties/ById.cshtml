
@using PMStudio.Common
@model SinglePropertyViewModel

@{
    this.ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>

    <ul>
        <img src="@Model.ImageUrl" class="align-self-center mr-3" alt="...">
        <li class="list-group-item">Property Name: @Model.Name</li>
        <li class="list-group-item">Property Address: @Model.Address</li>
        <li class="list-group-item">Property Type: @Model.Type.ToString()</li>
        <li class="list-group-item">Property Business Owner: @Model.Owner</li>
        <li class="list-group-item">Tenant: @(Model.Tenant?.Name ?? string.Empty)</li>
        <li class="list-group-item">Monthly Rate: $@(Model.Tenant?.Rate)</li>
    </ul>
    <div class="single-meta">
        <a asp-controller="Properties" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
    </div>
    <div class="single-meta">
        <form method="post" asp-action="Delete" id="deleteForm" asp-route-id="@Model.Id"> 
        </form>
        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Do you want to delete "@Model.Name"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>