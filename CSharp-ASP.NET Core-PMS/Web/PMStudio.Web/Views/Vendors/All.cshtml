@model PMStudio.Web.ViewModels.Vendors.VendorsListViewModel
@{
    this.ViewData["Title"] = "Vendors";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<a class="btn btn-primary" asp-area="" asp-controller="Vendors" asp-action="Create">Add Vendor</a>
<div class="row">
    @foreach (var vendor in Model.Vendors)
    {
        <img src="..." class="align-self-center mr-3" alt="...">
        <div class="media-body">
            <h5 class="mt-0"><a asp-action="ById" asp-route-id="@vendor.Id"> @vendor.Name</a></h5>
            @vendor.Trade
            @vendor.Phone
            @vendor.Email
        </div>
        <li class="single-meta">
            <form method="post" asp-action="Delete" id="deleteForm" asp-route-id="@vendor.Id">
            </form>
            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
        </li>
    
    <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <p>Do you want to delete "@vendor.Name"?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
}
    </div>
    <hr />
    <partial name="_PagingPartial" model="@Model" />
