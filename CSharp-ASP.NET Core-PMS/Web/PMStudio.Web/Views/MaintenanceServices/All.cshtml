@model PMStudio.Web.ViewModels.MaintenanceServicesViewModels.MaintenanceServicesListViewModel
@{
    this.ViewData["Title"] = "All MaintenanceServices";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="MaintenanceServices" asp-action="Create">Add New Maintenance Service</a>
</li>
<hr />
<div class="row">
    @foreach (var maintenanceService in Model.MaintenanceServices)
    {
        <img src="..." class="align-self-center mr-3" alt="...">
        <div class="media-body">
            <h5 class="mt-0"><a asp-action="ById" asp-route-id="@maintenanceService.Id"> @maintenanceService.Name</a></h5>
            @maintenanceService.ServiceDate
            @maintenanceService.Property.Name
            @maintenanceService.Vendor.Name
        </div>
        <li class="single-meta">
            <form method="post" asp-action="Delete" id="deleteForm" asp-route-id="@maintenanceService.Id">
            </form>
            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
        </li>

        <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>Do you want to delete "@maintenanceService.Name"?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
  }
 </div>
